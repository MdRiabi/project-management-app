{% extends 'base.html.twig' %}

{% block title %}Login - TaskFlow{% endblock %}

{% block body %}

    {# HERO SECTION #}
    <section class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 py-12">
        <div class="container mx-auto px-4">
            <div class="max-w-2xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4">
                    Welcome Back
                </h1>
                <p class="text-lg text-gray-600">
                    Sign in to your account to continue managing your tasks
                </p>
            </div>
        </div>
    </section>

    {# FORM SECTION #}
   {# ... (Code de la section HERO) ... #}

{# FORM SECTION - La partie qui a besoin de correction #}
<section class="py-12 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto">
            <div class="bg-gray-800 rounded-2xl shadow-xl p-8 border border-gray-700"> 
                
                {# Déclaration du Formulaire POST Correcte #}
                <form method="post" action="{{ path('app_login') }}">
                    <h2 class="text-2xl font-bold text-white mb-6 text-center">Sign In to Your Workspace</h2>
                    
                    {# Affichage de l'erreur Symfony (IMPORTANT) #}
                    {% if error is defined and error %}
                        <div class="bg-red-500 text-white p-3 rounded-lg mb-4 text-sm" role="alert">
                            {{ error.messageKey|trans(error.arguments, 'security') }}
                        </div>
                    {% endif %}

                    <div class="space-y-6">
                        {# Email Field #}
                        <div>
                            <label for="inputEmail" class="block text-sm font-semibold text-gray-300 mb-2">
                                Email <span class="text-red-500">*</span>
                            </label>
                            <input
                                type="email"
                                value="{{ last_username|default('') }}"
                                autocomplete="username"
                                id="inputEmail"
                                name="email" {# Conforme à username_parameter: email #}
                                required
                                class="w-full px-4 py-3 rounded-lg border border-gray-600 bg-gray-700 text-white focus:ring-blue-500 focus:border-blue-500 transition"
                                placeholder="your.email@example.com"
                            >
                        </div>

                        {# Password Field #}
                        <div>
                            <label for="inputPassword" class="block text-sm font-semibold text-gray-300 mb-2">
                                Password <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input
                                    type="password"
                                    id="inputPassword"
                                    name="password" {# Conforme à password_parameter: password #}
                                    autocomplete="current-password"
                                    required
                                    class="w-full px-4 py-3 rounded-lg border border-gray-600 bg-gray-700 text-white focus:ring-blue-500 focus:border-blue-500 transition"
                                    placeholder="Enter your password"
                                >
                                {# Bouton de visibilité du mot de passe (si vous utilisez le JS togglePasswordVisibility) #}
                                <button
                                    type="button"
                                    onclick="togglePasswordVisibility()"
                                    class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-200"
                                >
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                        </div>

                        {# Token CSRF (Sécurité) #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# Bouton Sign In #}
                        <div class="pt-4">
                            <button
                                type="submit"
                                class="w-full px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg transition"
                            >
                                <i class="fas fa-sign-in-alt mr-2"></i> Sign In
                            </button>
                        </div>
                    </div>
                </form>

                {# Lien de Demande de Compte #}
                <div class="text-center pt-6 border-t border-gray-700 mt-6">
                    <p class="text-gray-400">
                        Don't have an account?
                        <a href="{{ path('home') }}" class="text-blue-400 hover:text-blue-300 font-semibold">
                            Request an account
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </section>

    

{% endblock %}

{% block footer %}{% endblock %}

{% block javascripts %}
    parent()

    <script>

    // Vous pouvez garder cette fonction pour l'UX (l'icône "oeil")
       function togglePasswordVisibility() {
          const passwordInput = document.getElementById('inputPassword');
          const toggleIcon = document.getElementById('toggleIcon');

         if (passwordInput && toggleIcon) { // Vérification de sécurité pour éviter les erreurs
             if (passwordInput.type === 'password') {
                 passwordInput.type = 'text';
                 // Assurez-vous d'avoir les classes fa-eye-slash et fa-eye (Font Awesome)
                 toggleIcon.classList.remove('fa-eye');
                 toggleIcon.classList.add('fa-eye-slash');
             } else {
                 passwordInput.type = 'password';
                 toggleIcon.classList.remove('fa-eye-slash');
                 toggleIcon.classList.add('fa-eye');
             }
         }
        }

    </script>

{% endblock %}
