{# templates/components/_sidebar_admin.html.twig #}

{# Conteneur du Sidebar (Fixed, Sombre) #}
<div id="admin-sidebar" class="fixed top-0 left-0 h-full w-64 bg-gray-800 dark:bg-gray-800 text-gray-400 p-4 hidden lg:block z-20 transform transition-all duration-300">
    <style>
      /* Mini-variant rules scoped to this component */
      #admin-sidebar.sidebar-mini { width: 4rem; padding-left: 0.5rem; padding-right: 0.5rem; }
      #admin-sidebar.sidebar-mini .sidebar-text { display: none; }
      #admin-sidebar.sidebar-mini a { justify-content: center; }
      #admin-sidebar.sidebar-mini a .mr-3 { margin-right: 0; }
    </style>
    
    {# Logo et Nom de l'App #}
    <div class="flex items-center justify-between pb-4 border-b border-gray-700">
        <div class="flex items-center space-x-2">
            <a id="sidebar-title" class="text-xl font-bold text-white sidebar-text">Project Manager</a>
            <button id="sidebarToggle" class="focus:outline-none inline-flex items-center justify-center h-8 w-8 rounded hover:bg-gray-700" title="Toggle sidebar">
                <img src="{{ asset('images/menu1.png') }}" alt="Toggle" class="h-5 w-5">
            </button>
        </div>
        {# Bouton de toggle (pour les écrans plus petits, caché sur desktop) #}
        <button class="lg:hidden text-white">
             <i class="fas fa-bars"></i>
        </button>
    </div>

    {# Bloc de Navigation Principal #}
    <nav class="mt-8 space-y-4">
        <div class="space-y-1">
            <a href="{{ path('app_dashboard') }}" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-700 transition">
                <i class="fas fa-tachometer-alt mr-3 w-5 text-center"></i>
                <span class="sidebar-text">Dashboard</span>
            </a>
            <a href="#" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-700 transition">
                <i class="fas fa-users mr-3 w-5 text-center"></i>
                <span class="sidebar-text">User and Account Management</span>
            </a>
            <a href="#" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-700 transition">
                <i class="fas fa-project-diagram mr-3 w-5 text-center"></i>
                <span class="sidebar-text">Project and Progress Management</span>
            </a>
            <a href="#" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-700 transition">
                <i class="fas fa-tasks mr-3 w-5 text-center"></i>
                <span class="sidebar-text">Task Management</span>
            </a>
            <a href="#" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-700 transition">
                <i class="fas fa-chart-line mr-3 w-5 text-center"></i>
                <span class="sidebar-text">Dashboard and Collaboration</span>
            </a>
            <a href="#" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-700 transition">
                <i class="fas fa-cogs mr-3 w-5 text-center"></i>
                <span class="sidebar-text">Advanced Resource Management</span>
            </a>
            <a href="#" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-700 transition">
                <i class="fas fa-exclamation-triangle mr-3 w-5 text-center"></i>
                <span class="sidebar-text">Risk and Issue Management</span>
            </a>
        </div>
    </nav>

    <script>
        // Collapse/expand using a mini-variant. Never hide or translate off-screen.
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('admin-sidebar');
            const toggle = document.getElementById('sidebarToggle');
            if (!sidebar || !toggle) return;

            // Ensure it's visible and not off-canvas
            sidebar.classList.remove('hidden', '-translate-x-full');
            sidebar.classList.add('lg:block');

            // Use a single class to represent mini mode
            const miniClass = 'sidebar-mini';

            // Click toggles between full and mini
            toggle.addEventListener('click', function (e) {
                e.preventDefault();
                sidebar.classList.toggle(miniClass);
            });
        });
    </script>
</div>
